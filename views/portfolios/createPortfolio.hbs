<div class="bg-white rounded shadow lead">
    <div class="pt-4 px-4">
        {{#if validationErrors.length}}
        {{#each validationErrors}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>
                {{this}}
            </strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {{/each}}
        {{/if}}
        <div class="text-center">
            <h1 class="display-4 ">Create Portfolio <i class="text-danger fas fa-briefcase pl-2"></i></h1>
            <p class="text-muted">
                Create new portfolio to showcase your work.
            </p>
        </div>
        <hr class="my-4 bg-danger">
    </div>
    <form action="/portfolios/create/?_csrf={{csrftoken}}" enctype="multipart/form-data" method="POST">
        <div class="container">
            <div class="form-group row">
                <label for="inputTitle" class="col-md-2 col-sm-12 col-form-label col-form-label-lg">
                    Project name
                </label>
                <div class="col-md-10 col-sm-12">
                    <input type="text" name="title" class="form-control form-control-lg" id="inputTitle"
                        placeholder="Enter project name here..." maxlength="50" value="{{title}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputGroupFile01" class="col-md-1 col-sm-12 col-form-label col-form-label-lg">
                    Image
                </label>
                <div class="custom-file col-md-11 col-sm-12">
                    <input accept="image/*" name="image" type="file" class="custom-file-input" id="inputGroupFile01"
                        onchange="$(this).next().after().text($(this).val().split('\\').slice(-1)[0])">
                    <label class="custom-file-label text-muted" for="inputGroupFile01">
                        Click here to browse file...
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label for="inputCaption">
                    Caption
                    <br>
                    <small class="text-muted">
                        A caption is text that appears below an project name.
                    </small>
                </label>
                <input name="caption" class="form-control form-control-lg" id="inputCaption" rows="2"
                    placeholder="Write project caption here..." maxlength="75" value="{{caption}}"></input>
            </div>
            <hr class="mt-4">
            <div class="form-group">
                <label for="inputDescription">
                    Project description
                    <br>
                    <small class="text-muted">
                        A descriptive text which presents information about project.
                    </small>
                </label>
                <textarea name="description" class="form-control form-control-lg" id="inputDescription" rows="7"
                    placeholder="Write project description here..." maxlength="500">{{description}}</textarea>
            </div>
            <div class="input-group input-group-lg">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="fromDate">Published date</span>
                </div>
                <input value="{{date}}" name="date" type="date" class="form-control" aria-describedby="fromDate">
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-outline-success btn-lg my-4">
                    <i class="fas fa-plus pr-2"></i>Create Now
                </button>
            </div>
        </div>
    </form>
</div>