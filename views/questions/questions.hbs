<div class="px-4 bg-white">
    <div class="py-4">
        <div class="text-center">
            <h1 class="display-4 lead ">Ask Me a Question <i class="fas text-danger fa-question-circle"></i></h1>
            <p class="lead text-muted">
                If you have questions about anything, feel free to come by and ask, any time.
            </p>
        </div>
        <form>
            <div class="lead">
                <div class="input-group input-group-lg mb-3">
                    <input type="text" value="{{search}}" name="search" class="form-control" placeholder="Search..."
                        aria-describedby="button-addon" maxlength="100">
                    <div class="input-group-append">
                        <button class="btn btn-danger" type="submit" id="button-addon">
                            Search
                            <i class="fas fa-search pl-1 fa-lg"></i>
                        </button>
                    </div>
                </div>
            </div>
        </form>
        <hr class="my-4 bg-danger">
        {{#if questions.length}}
        {{#each questions}}
        <div class="accordion shadow bg-white rounded border-bottom">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <i class="fab fa-3x text-danger fa-quora"></i>
                        <a href="/questions/{{this.id}}">
                            <span class="pl-3 lead text-dark font-weight-bold">
                                {{this.question}}
                            </span>
                        </a>
                        <div class="ml-auto">
                            <span class="text-muted">
                                <i class="far fa-calendar-alt"></i>
                                {{timestampToDateString this.createdAt}}
                            </span>
                        </div>
                    </div>
                </div>
                <div class="collapse show">
                    <div class="card-body d-flex align-items-center text-muted">
                        <i class="fab fa-3x fa-amilia"></i>
                        <span class="pl-4 lead">
                            {{#if this.answer}}
                            {{this.answer}}
                            {{else}}
                            <small>
                                NO ANSWER FOR NOW.
                            </small>
                            {{/if}}
                        </span>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="text-center">
            <span class="lead text-muted">
                NO QUESTIONS :(
            </span>
        </div>
        {{/if}}
        <div class="pt-4 text-right">
            <a class="btn btn-outline-success" href="/questions/create/">
                <span class="lead">
                    <i class="fas fa-plus pr-2"></i>
                    New Question
                </span>
            </a>
        </div>
        {{#if questions.length}}
        <nav>
            <ul class="pagination justify-content-center">
                {{#paginate pagination type="previous"}}
                <li class="page-item {{#if disabled}}disabled{{/if}}">
                    <a class="page-link" href="?page={{n}}">Previous</a>
                </li>
                {{/paginate}}
                {{#paginate pagination type="middle" limit="5"}}
                <li class="page-item {{#if active}}active{{/if}}"><a class="page-link" href="?page={{n}}">{{n}}</a></li>
                {{/paginate}}
                {{#paginate pagination type="next"}}
                <li class="page-item {{#if disabled}}disabled{{/if}}"><a class="page-link" href="?page={{n}}">Next</a>
                </li>
                {{/paginate}}
            </ul>
        </nav>
        {{/if}}
    </div>
</div>