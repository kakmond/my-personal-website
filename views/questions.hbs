<div class="px-4 bg-white">
    <div class="py-4">
        <div class="text-center">
            <h1 class="display-4 lead ">Ask Me a Question <i class="fas text-danger fa-question-circle"></i></h1>
            <p class="lead text-muted">
                Please feel free to contact me if you need any further information about me.
            </p>
        </div>
        <form method="POST">
            <div class="lead">
                <div class="input-group input-group-lg mb-3">
                    <input type="text" name="question" class="form-control {{#if validationErrors}}is-invalid{{/if}}"
                        placeholder="Search..." aria-describedby="button-addon" maxlength="100">
                    <div class="input-group-append">
                        <button class="btn btn-danger" type="submit" id="button-addon">
                            Search
                            <i class="fas fa-search pl-1 fa-lg"></i>
                        </button>
                    </div>
                    <div class="invalid-feedback">
                        {{validationErrors}}
                    </div>
                </div>
            </div>
        </form>
        <hr class="my-4 bg-danger">
        {{#if questions.length}}
        {{#each questions}}
        <div class="accordion shadow bg-white rounded border-bottom">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="d-flex align-items-center">
                        <i class="fab fa-3x text-danger fa-quora"></i>
                        <a href="/questions/{{this.id}}">
                            <span class="pl-3 lead text-dark font-weight-bold">
                                {{this.question}}
                            </span>
                        </a>
                    </div>
                </div>
                <div class="collapse show">
                    <div class="card-body d-flex align-items-center text-muted">
                        <i class="fab fa-3x fa-amilia"></i>
                        <span class="pl-4 lead">
                            {{#if this.answer}}
                            {{this.answer}}
                            {{else}}
                            <small>
                                NO ANSWER FOR NOW.
                            </small>
                            {{/if}}
                        </span>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="text-center">
            <span class="lead text-muted">
                NO QUESTIONS :(
            </span>
        </div>
        {{/if}}
        <div class="pt-4 text-right">
            <a class="btn btn-outline-success" href="/createQuestion">
                <span class="lead">
                    <i class="fas fa-plus pr-2"></i>
                    New Question
                </span>
            </a>
        </div>
        <nav>
            <ul class="pagination justify-content-center">
                {{#paginate pagination type="previous"}}
                <li class="page-item {{#if disabled}}disabled{{/if}}">
                    <a class="page-link" href="?page={{n}}">Previous</a>
                </li>
                {{/paginate}}
                {{#paginate pagination type="middle" limit="5"}}
                <li class="page-item {{#if active}}active{{/if}}"><a class="page-link" href="?page={{n}}">{{n}}</a></li>
                {{/paginate}}
                {{#paginate pagination type="next"}}
                <li class="page-item {{#if disabled}}disabled{{/if}}"><a class="page-link" href="?page={{n}}">Next</a>
                </li>
                {{/paginate}}
            </ul>
        </nav>
    </div>
</div>