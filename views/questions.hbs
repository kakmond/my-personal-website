<div class="px-4" style="background-color: white">
    <div class="py-4">
        <div class="text-center">
            <h1 class="display-4 lead text-monospace">Ask Me a Question <i
                    class="fas text-danger fa-question-circle"></i></h1>
            <p class="text-monospace lead text-muted">
                Please feel free to contact me if you need any further information about me.
            </p>
        </div>
        <form method="POST">
            <div class="text-monospace lead">
                <div class="input-group input-group-lg mb-3">
                    <input type="text" name="question" class="form-control {{#if validationErrors}}is-invalid{{/if}}"
                        placeholder="Ask me anything" aria-describedby="button-addon">
                    <div class="input-group-append">
                        <button class="btn btn-danger" type="submit" id="button-addon">
                            Ask
                            <i class="fas fa-question-circle fa-lg"></i>
                        </button>
                    </div>
                    <div class="invalid-feedback">
                        {{validationErrors}}
                    </div>
                </div>
            </div>
        </form>
        <hr class="my-4 bg-danger">
        {{#if questions.length}}
        {{#each questions}}
        <div class="accordion border-bottom" id="accordion{{@index}}">
            <div class="card">
                <div class="card-header d-flex justify-content-between" id="heading{{@index}}">
                    <div class="d-flex align-items-center">
                        <i class="fab fa-3x text-danger fa-quora"></i>
                        <button class="btn btn-link pl-3" type="button" data-toggle="collapse"
                            data-target="#collapse{{@index}}" aria-expanded="true" aria-controls="collapse{{@index}}">
                            <span class="text-monospace lead text-dark font-weight-bold">
                                {{this.question}}
                            </span>
                        </button>
                    </div>
                    <a href="/questions/{{this.id}}" class="btn btn-outline-primary">
                        <i class="fas fa-lg fa-edit align-bottom"></i>
                    </a>
                </div>
                <div id="collapse{{@index}}" class="collapse" aria-labelledby="heading{{@index}}"
                    data-parent="#accordion{{@index}}">
                    <div class="card-body d-flex align-items-center text-muted">
                        <i class="fab fa-3x fa-amilia"></i>
                        <span class="pl-4 text-monospace lead">
                            {{#if this.answer}}
                            {{this.answer}}
                            {{else}}
                            <small>
                                NO ANSWER FOR NOW.
                            </small>
                            {{/if}}
                        </span>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="text-center">
            <span class="text-monospace lead text-muted">
                NO QUESTIONS :(
            </span>
        </div>
        {{/if}}
    </div>
    {{#if questions.length}}
    <nav class="pb-2">
        <ul class="pagination justify-content-center">
            {{#paginate pagination type="previous"}}
            <li class="page-item {{#if disabled}}disabled{{/if}}">
                <a class="page-link" href="?page={{n}}">Previous</a>
            </li>
            {{/paginate}}
            {{#paginate pagination type="middle" limit="5"}}
            <li class="page-item {{#if active}}active{{/if}}"><a class="page-link" href="?page={{n}}">{{n}}</a></li>
            {{/paginate}}
            {{#paginate pagination type="next"}}
            <li class="page-item {{#if disabled}}disabled{{/if}}"><a class="page-link"
                    href="?page={{n}}">Next</a></li>
            {{/paginate}}
        </ul>
    </nav>
    {{/if}}
</div>

<style>
    .page-item.active .page-link {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .page-item .page-link {
        color: #dc3545;
        border-color: #dc3545;
    }
</style>